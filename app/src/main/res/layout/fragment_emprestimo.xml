<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7CEDD3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragments.SaldoFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Emprestimo:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/MoneyEmprestimo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="example: $50,20"
        android:inputType="number|textPersonName|text" />

    <TextView
        android:id="@+id/txtQtdEmprestimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="#03A9F4"
        android:gravity="center|right"
        android:shadowColor="#30D55A"
        android:text="0,00"
        android:textColor="#30D55A"
        android:textColorHighlight="#30D55A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtTaxaEmprestimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="#03A9F4"
        android:gravity="center|right"
        android:shadowColor="#30D55A"
        android:text="Taxa 15%"
        android:textColor="#30D55A"
        android:textColorHighlight="#30D55A"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnEmpresta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#6E8F36"
        android:text="Confirmar" />

    <TextView
        android:id="@+id/txtSaldoEmprestimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:text="Saldo"
        android:textColor="#1B9E22"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>